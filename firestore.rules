rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // PUBLIC: Collective Mood State
    // Anyone can read the global mood.
    // Only authenticated users can trigger an update via the submitMood transaction.
    match /appState/collectiveMood {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // PUBLIC: Historical Snapshots
    // Anyone can read the mood history.
    // Snapshots are created by a trusted server process (or in this app's case, by any user triggering the check).
    match /moodSnapshots/{snapshotId} {
      allow read: if true;
      allow create: if request.auth != null;
    }
    
    // USER-SPECIFIC: Mood History & Profile
    // Users can only read and write to their own data paths.
    match /userMoodHistory/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    match /userProfiles/{userId} {
       allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // PUBLIC: Community Thoughts
    // Allow authenticated users to create new thoughts.
    // Allow any user (even anonymous) to read thoughts.
    // Allow authenticated users to update (e.g., like) a thought.
    match /communityQuotes/{quoteId} {
      allow read: if true;
      allow create: if request.auth != null && request.resource.data.text is string && request.resource.data.text.size() < 301;
      allow update: if request.auth != null;
    }

    // PUBLIC: Typing Indicators
    // Allow authenticated users to create/delete their own typing indicator.
    // Allow any user to read who is typing.
    match /typingUsers/{userId} {
       allow read: if true;
       allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // DENY ALL ELSE
    // Default-deny all other collections to prevent unintended access.
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
