
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Global app state, readable by all, writable by authenticated users via server functions.
    match /appState/collectiveMood {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Historical mood data for the history chart. Readable by all.
    // Creates are handled by a server function, allow authenticated users to trigger it.
    match /moodSnapshots/{snapshotId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if false; // Snapshots are immutable
    }

    // User-submitted thoughts. Readable by all.
    // Authenticated users can create new thoughts and update likes.
    match /communityQuotes/{quoteId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update: if request.auth != null; // For liking thoughts
      allow delete: if false; // Users cannot delete thoughts
    }
    
    // Tracks which users are currently typing in the thoughts page.
    // Authenticated users can read the list and write to their own document.
    match /typingUsers/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Tracks a user's presence/activity.
    // Authenticated users can write to their own document, no one can read.
    match /userActivity/{userId} {
        allow write: if request.auth != null && request.auth.uid == userId;
        allow read: if false;
    }

    // Stores personal mood history for the calendar view.
    // Users can only access their own data.
    match /userMoodHistory/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Stores user profile data like streaks.
    // Users can only access their own profile.
    match /userProfiles/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
