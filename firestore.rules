rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- Publicly Readable Data ---

    // The main app state can be read by anyone.
    // Writes are done via transaction from authenticated clients.
    match /appState/{docId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Historical data and quotes are public.
    match /moodSnapshots/{snapshotId} {
      allow read: if true;
      allow create: if request.auth != null; // Allow clients to trigger archiving
    }

    match /communityQuotes/{quoteId} {
      allow read: if true;
      // Allow authenticated users to create and like posts.
      allow create: if request.auth != null;
      allow update: if request.auth != null && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['likes']);
    }
    
    // Anyone can see who is typing.
    match /typingUsers/{userId} {
      allow read: if true;
      // Only the user can update their own typing status.
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // --- User-Specific Data (Private) ---

    // Users can only access their own profile and mood history.
    match /userProfiles/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    match /userMoodHistory/{userId}/{documents=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Users can only update their own activity heartbeat.
    match /userActivity/{userId} {
       allow write: if request.auth != null && request.auth.uid == userId;
       allow read: if false; // No one needs to read this
    }
  }
}
